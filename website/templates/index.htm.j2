<script type="text/javascript">
function changeContent(linkNode) {
    let link = linkNode.getAttribute("href").slice(1);
    let hidables = document.querySelectorAll(".hidable");
    let found = false;
    for(h of hidables) {
        h.dataset.hidden = link == h.id ? "0" : "1";
        found = link == h.id || found;
    }
    if(!found) document.querySelector("#main").dataset.hidden = "0";
}
</script>
    
