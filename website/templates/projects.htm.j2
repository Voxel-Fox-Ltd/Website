{% extends "partials/page.htm.j2" %}


{% block head %}
<link rel="stylesheet" type="text/css" href="{{ static('/css/projects.css') }}" />
{% endblock %}


{% macro project(name, href, icon, description, date=none) %}
{% endmacro %}


{% macro link(label, url, icon=none) %}
<li>
  <a href="{{ url }}" target="_blank">
    {% if icon %}<icon {{ icon }}></icon> {% endif %}{{ label }}
  </a>
</li>
{% endmacro %}
{% macro discord_link(id) %}
<li>
  <a target="_blank" data-discord-id="{{ id }}">
    <icon discord></icon> Discord Invite
  </a>
</li>
{% endmacro %}


{% block content %}
<div class="project">  <!-- novus -->
  <input type="checkbox" id="novus-cb" />
  <div class="top">
    <label class="name" for="novus-cb">Novus</label>
    <div>
      <icon discord></icon>
      <icon python></icon>
    </div>
  </div>
  <p class="short-description">A Python library for the Discord API.</p>
  <div class="long-description">
    <p>
      Novus is a fast and low-intensity API wrapper written to help other developers interact with the Discord API.
    </p>
    <p>
      Written from the ground up following the discontinuation of Discord.py, Novus is an interaction-centric library written in Python to interact with Discord. It implements command handling and syncing, rate limiting, websocket <i>and</i> webserver-based event handling, as well as an easy-to-use plugin system for extendability.
    </p>
    <ul class="links">
      {{ link("Github", "https://github.com/Voxel-Fox-Ltd/Novus", "github") }}
    </ul>
  </div>
  <p class="date">August 2021 - present</p>
</div>  <!-- /novus -->


<div class="project">  <!-- marriagebot -->
  <input type="checkbox" id="marriagebot-cb" />
  <div class="top">
    <label class="name" for="marriagebot-cb">MarriageBot</label>
    <div>
      <icon discord></icon>
      <icon python></icon>
      <icon postgres></icon>
    </div>
  </div>
  <p class="short-description">Discord's most popular family tree bot.</p>
  <div class="long-description">
    <p>
      MarriageBot is a chatbot for users to start virtual families with other users.
    </p>
    <p>
      There are a few other bots on Discord that allow users to "get married" and "have children" as this does, but MarriageBot was the first bot that allowed users to generate a family tree dynamically based on that family.
    </p>
    <img src="https://marriagebot.xyz/static/images/tree.png" />
    <ul class="links">
      {{ discord_link(468281173072805889) }}
      {{ link("Website", "https://marriagebot.xyz", "link") }}
      {{ link("Github", "https://github.com/Voxel-Fox-Ltd/MarriageBot", "github") }}
      {{ link("Donate", "/portal/marriagebot", "banknote") }}
      {{ link("Privacy Policy", "/md/privacy_policy/MarriageBot.md", "link") }}
      {{ link("Terms of Service", "/md/terms_of_service/MarriageBot.md", "link") }}
    </ul>
  </div>
  <p class="date">July 2018 - present</p>
</div>  <!-- /marriagebot -->


